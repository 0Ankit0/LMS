@rendermode InteractiveServer

<div class="admin-nav-top">
    <div class="admin-nav-header">
        <h4 class="admin-title">Admin Panel</h4>
        <button class="admin-collapse-btn" @onclick="ToggleNavbar"
            title="@(isNavbarCollapsed ? "Expand sidebar" : "Collapse sidebar")">
            <span class="bi @(isNavbarCollapsed ? "bi-chevron-right" : "bi-chevron-left")"></span>
        </button>
        <button class="admin-mobile-toggle" @onclick="ToggleMobileMenu" title="Toggle navigation menu">
            <span class="hamburger-icon">
                <span></span>
                <span></span>
                <span></span>
            </span>
        </button>
    </div>
</div>

<div class="admin-nav-scrollable @(GetNavScrollableClasses())" style="@(isMobileMenuOpen ? "display: block;" : "")">
    <nav class="admin-nav">
        <div class="admin-nav-item" data-tooltip="Dashboard">
            <NavLink class="admin-nav-link" href="/admin" Match="NavLinkMatch.All" title="Dashboard">
                <span class="bi bi-speedometer2" aria-hidden="true"></span>
                <span class="admin-nav-text">Dashboard</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Achievements">
            <NavLink class="admin-nav-link" href="/admin/achievements" title="Achievements">
                <span class="bi bi-trophy" aria-hidden="true"></span>
                <span class="admin-nav-text">Achievements</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Assessments">
            <NavLink class="admin-nav-link" href="/admin/assessments" title="Assessments">
                <span class="bi bi-clipboard-check" aria-hidden="true"></span>
                <span class="admin-nav-text">Assessments</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Categories">
            <NavLink class="admin-nav-link" href="/admin/categories" title="Categories">
                <span class="bi bi-tags" aria-hidden="true"></span>
                <span class="admin-nav-text">Categories</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Certificates">
            <NavLink class="admin-nav-link" href="/admin/certificates" title="Certificates">
                <span class="bi bi-award" aria-hidden="true"></span>
                <span class="admin-nav-text">Certificates</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Courses">
            <NavLink class="admin-nav-link" href="/admin/courses" title="Courses">
                <span class="bi bi-book" aria-hidden="true"></span>
                <span class="admin-nav-text">Courses</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Enrollments">
            <NavLink class="admin-nav-link" href="/admin/enrollments" title="Enrollments">
                <span class="bi bi-person-plus" aria-hidden="true"></span>
                <span class="admin-nav-text">Enrollments</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Forums">
            <NavLink class="admin-nav-link" href="/admin/forums" title="Forums">
                <span class="bi bi-chat-square-text" aria-hidden="true"></span>
                <span class="admin-nav-text">Forums</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Forum Posts">
            <NavLink class="admin-nav-link" href="/admin/forumposts" title="Forum Posts">
                <span class="bi bi-chat-dots" aria-hidden="true"></span>
                <span class="admin-nav-text">Forum Posts</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Lessons">
            <NavLink class="admin-nav-link" href="/admin/lessons" title="Lessons">
                <span class="bi bi-play-circle" aria-hidden="true"></span>
                <span class="admin-nav-text">Lessons</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Modules">
            <NavLink class="admin-nav-link" href="/admin/modules" title="Modules">
                <span class="bi bi-collection" aria-hidden="true"></span>
                <span class="admin-nav-text">Modules</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Questions">
            <NavLink class="admin-nav-link" href="/admin/questions" title="Questions">
                <span class="bi bi-question-circle" aria-hidden="true"></span>
                <span class="admin-nav-text">Questions</span>
            </NavLink>
        </div>

        <div class="admin-nav-item" data-tooltip="Tags">
            <NavLink class="admin-nav-link" href="/admin/tags" title="Tags">
                <span class="bi bi-hash" aria-hidden="true"></span>
                <span class="admin-nav-text">Tags</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isNavbarCollapsed = false; // Start expanded by default for admin
    private bool isMobileMenuOpen = false; // Mobile menu state

    private void ToggleNavbar()
    {
        isNavbarCollapsed = !isNavbarCollapsed;
    }

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private string GetNavScrollableClasses()
    {
        var classes = new List<string>();

        if (isNavbarCollapsed)
        {
            classes.Add("collapsed");
        }

        return string.Join(" ", classes);
    }
}

           