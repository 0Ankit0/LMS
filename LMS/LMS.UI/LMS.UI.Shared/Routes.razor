<Router AppAssembly="typeof(Layout.MainLayout).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <MudCard Elevation="2">
                            <MudCardHeader Class="mud-bg-warning mud-text-white">
                                <MudText Class="mb-0">
                                    <MudIcon Icon="@Icons.Material.Filled.Search" Class="me-2" />
                                    Page Not Found
                                </MudText>
                            </MudCardHeader>
                            <MudCardContent>
                                <MudAlert Severity="Severity.Warning" Class="mb-4">
                                    <MudText>Sorry, the page you are looking for could not be found.</MudText>
                                </MudAlert>
                                <div class="mt-4 d-flex gap-2 flex-wrap">
                                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
                                        <MudIcon Icon="@Icons.Material.Filled.Home" Class="me-2" />
                                        Go to Home
                                    </MudButton>
                                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true))">
                                        <MudIcon Icon="@Icons.Material.Filled.Refresh" Class="me-2" />
                                        Reload Page
                                    </MudButton>
                                </div>
                            </MudCardContent>
                        </MudCard>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
