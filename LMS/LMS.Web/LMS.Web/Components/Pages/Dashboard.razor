@page "/admin"
@layout LMS.Components.Layout.AdminLayout
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Admin Dashboard</PageTitle>

<div class="row mb-4">
    <div class="col-12">
        <h1 class="mb-0">Admin Dashboard</h1>
        <p class="text-muted">Welcome to the LMS Administration Panel</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-3 col-md-6">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Courses</h5>
                        <h3 class="mb-0">--</h3>
                    </div>
                    <i class="bi bi-book fs-1 opacity-75"></i>
                </div>
                <a href="/admin/courses" class="btn btn-light btn-sm mt-2">Manage Courses</a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Categories</h5>
                        <h3 class="mb-0">--</h3>
                    </div>
                    <i class="bi bi-tags fs-1 opacity-75"></i>
                </div>
                <a href="/admin/categories" class="btn btn-light btn-sm mt-2">Manage Categories</a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Assessments</h5>
                        <h3 class="mb-0">--</h3>
                    </div>
                    <i class="bi bi-clipboard-check fs-1 opacity-75"></i>
                </div>
                <a href="/admin/assessments" class="btn btn-light btn-sm mt-2">Manage Assessments</a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Enrollments</h5>
                        <h3 class="mb-0">--</h3>
                    </div>
                    <i class="bi bi-person-plus fs-1 opacity-75"></i>
                </div>
                <a href="/admin/enrollments" class="btn btn-light btn-sm mt-2">Manage Enrollments</a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/admin/courses/create"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-plus-circle me-2"></i>Create New Course</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/categories/create"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-plus-circle me-2"></i>Create New Category</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/assessments/create"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-plus-circle me-2"></i>Create New Assessment</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/achievements/create"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-plus-circle me-2"></i>Create New Achievement</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Management Tools</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/admin/modules"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-collection me-2"></i>Manage Modules</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/lessons"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-play-circle me-2"></i>Manage Lessons</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/forums"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-chat-square-text me-2"></i>Manage Forums</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="/admin/certificates"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-award me-2"></i>Manage Certificates</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

                       
                       
                       
                       
                       
                       
                       
                       