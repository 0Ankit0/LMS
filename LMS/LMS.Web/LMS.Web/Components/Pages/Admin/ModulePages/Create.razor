@page "/admin/modules/create"

@using LMS.Repositories
@using LMS.Web.Components.Shared
@using LMS.Web.Services

@inject ICourseRepository CourseRepository
@inject IDropdownRepository DropdownRepository
@inject NavigationManager NavigationManager
@inject LMS.Web.Services.ToastService ToastService
@rendermode @(new InteractiveServerRenderMode())

<PageTitle>Create Module - Admin</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Create New Module</h1>
    <Button Color="ButtonColor.Secondary" Href="/admin/modules">
        <Icon Name="IconName.ArrowLeft" />
        Back to Modules
    </Button>
</div>

<Card>
    <div class="card-header">
        <h5 class="card-title mb-0">Module Information</h5>
    </div>
    <CardBody>
        <EditForm Model="Module" OnValidSubmit="AddModule">
            <AntiforgeryToken />
            <DataAnnotationsValidator />
            <ValidationSummary class="alert alert-danger" role="alert" />

            <div class="mb-3">
                <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                <InputText id="title" @bind-Value="Module.Title" class="form-control" aria-required="true" 
                           placeholder="Enter module title" />
                <ValidationMessage For="() => Module.Title" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <InputTextArea id="description" @bind-Value="Module.Description" class="form-control" rows="3"
                               placeholder="Enter module description" />
                <ValidationMessage For="() => Module.Description" class="text-danger" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="courseid" class="form-label">Course <span class="text-danger">*</span></label>
                    <SearchableSelectComponent TItem="DropdownOption<int>" TValue="int"
                                               OnLoad="async () => (await DropdownRepository.GetCoursesAsync(null, 20)).Cast<DropdownOption<int>>()"
                                               ValueSelector="@(item => item.Value)"
                                               DisplaySelector="@(item => item.Text)"
                                               @bind-SelectedValue="Module.CourseId"
                                               Placeholder="Select a course..."
                                               EmptyText="No courses found" />
                    <ValidationMessage For="() => Module.CourseId" class="text-danger" />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="orderindex" class="form-label">Order Index</label>
                    <InputNumber id="orderindex" @bind-Value="Module.OrderIndex" class="form-control" 
                                 placeholder="1" />
                    <ValidationMessage For="() => Module.OrderIndex" class="text-danger" />
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <InputCheckbox id="isrequired" @bind-Value="Module.IsRequired" class="form-check-input" />
                    <label for="isrequired" class="form-check-label">Is Required</label>
                    <ValidationMessage For="() => Module.IsRequired" class="text-danger" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <Button Color="ButtonColor.Primary" Type="ButtonType.Submit" Loading="@isSubmitting">
                    <Icon Name="IconName.CheckCircle" />
                    Create Module
                </Button>
                <Button Color="ButtonColor.Secondary" Href="/admin/modules">Cancel</Button>
            </div>
        </EditForm>
    </CardBody>
</Card>

@code {
    [SupplyParameterFromForm]
    private CreateModuleRequest Module { get; set; } = new();
    private bool isSubmitting = false;

    private async Task<AutoCompleteDataProviderResult<DropdownOption<int>>> SearchCoursesDataProvider(AutoCompleteDataProviderRequest<DropdownOption<int>> request)
    {
        try
        {
            var courses = await DropdownRepository.GetCoursesAsync(search: request.Filter.Value, take: 20);
            return new AutoCompleteDataProviderResult<DropdownOption<int>>
            {
                Data = courses,
                TotalCount = courses.Count
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading courses: {ex.Message}");
            return new AutoCompleteDataProviderResult<DropdownOption<int>>
            {
                Data = new List<DropdownOption<int>>(),
                TotalCount = 0
            };
        }
    }

    private async Task AddModule()
    {
        if (isSubmitting) return;
        
        isSubmitting = true;
        try
        {
            var result = await CourseRepository.CreateModuleAsync(Module);
            if (result != null)
            {
                ToastService.ShowSuccess("Success", "Module created successfully!");
                NavigationManager.NavigateTo("/admin/modules");
            }
            else
            {
                ToastService.ShowError("Error", "Failed to create module. Please try again.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error", $"Error creating module: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }
}