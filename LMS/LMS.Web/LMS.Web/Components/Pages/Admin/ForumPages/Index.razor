@page "/admin/forums"

@using LMS.Repositories
@using LMS.Data.DTOs
@using LMS.Data.Entities
@using LMS.Web.Components.Shared 

@inject IForumRepository ForumRepository

<PageTitle>Forums - Admin</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Forums</h1>
    <Button Color="ButtonColor.Primary" Href="/admin/forums/create">
        <Icon Name="IconName.PlusCircle" />
        Add New Forum
    </Button>
</div>

<div class="card">
    <div class="card-body">
        @if (paginatedForums != null)
        {
            if (paginatedForums.Items.Any())
            {
                <Grid TItem="ForumModel" Class="table table-striped table-hover" Data="paginatedForums.Items">
                    <GridColumn TItem="ForumModel" HeaderText="Title" PropertyName="Title" />
                    <GridColumn TItem="ForumModel" HeaderText="Description" PropertyName="Description" />
                    <GridColumn TItem="ForumModel" HeaderText="Course ID" PropertyName="CourseId" />
                    <GridColumn TItem="ForumModel" HeaderText="General">
                        @((context as ForumModel)?.IsGeneral == true ? "Yes" : "No")
                    </GridColumn>
                    <GridColumn TItem="ForumModel" HeaderText="Active">
                        @((context as ForumModel)?.IsActive == true ? "Yes" : "No")
                    </GridColumn>
                    <GridColumn TItem="ForumModel" HeaderText="Topics" PropertyName="TopicCount" />
                    <GridColumn TItem="ForumModel" HeaderText="Actions">
                        <div class="btn-group" role="group">
                            <Button Color="ButtonColor.Primary" Size="ButtonSize.Small" Href='@($"/admin/forums/edit?id={context.Id}")'>
                                <Icon Name="IconName.Pencil" /> Edit
                            </Button>
                            <Button Color="ButtonColor.Info" Size="ButtonSize.Small" Href='@($"/admin/forums/details?id={context.Id}")'>
                                <Icon Name="IconName.Eye" /> Details
                            </Button>
                            <Button Color="ButtonColor.Danger" Size="ButtonSize.Small" Href='@($"/admin/forums/delete?id={context.Id}")'>
                                <Icon Name="IconName.Trash" /> Delete
                            </Button>
                        </div>
                    </GridColumn>
                </Grid>

                <PaginationComponent TItem="ForumModel" PaginatedResult="paginatedForums"
                    OnPageChanged="OnPageChanged" OnPageSizeChanged="OnPageSizeChanged" />
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No forums found.</p>
                </div>
            }
        }
        else
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private PaginatedResult<ForumModel>? paginatedForums;
    private int currentPage = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadForumsAsync();
    }

    private async Task LoadForumsAsync()
    {
        var request = new PaginationRequest
        {
            PageNumber = currentPage,
            PageSize = pageSize
        };
        paginatedForums = await ForumRepository.GetForumsPaginatedAsync(request);
    }

    private async Task OnPageChanged(int page)
    {
        currentPage = page;
        await LoadForumsAsync();
    }

    private async Task OnPageSizeChanged(int size)
    {
        pageSize = size;
        currentPage = 1;
        await LoadForumsAsync();
    }
}

