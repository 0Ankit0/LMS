@inherits LayoutComponentBase
@attribute [Authorize(Roles = "Admin")]

<CustomErrorBoundary ShowDetailedErrors="true">
    <MudLayout>
        <MudDrawer ClipMode="DrawerClipMode.Always" Elevation="2" @bind-Open="@_drawerOpen">
            <AdminNavMenu />
        </MudDrawer>
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => _drawerOpen = !_drawerOpen)" />
            <ManageNav />
        </MudAppBar>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</CustomErrorBoundary>

<!-- Custom Toast Container -->
<MudSnackbarProvider />

@code {
    private bool _drawerOpen = true;
}
