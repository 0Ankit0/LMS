@typeparam TItem
@using BlazorBootstrap
@using System.Linq.Expressions

<GridColumn TItem="TItem" 
           HeaderText="@HeaderText" 
           PropertyName="@PropertyName"
           Sortable="@Sortable"
           Filterable="@Filterable"
           FilterTextboxWidth="@FilterTextboxWidth"
           SortKeySelector="@SortKeySelector"
           TextAlignment="@TextAlignment"
           HeaderTextAlignment="@HeaderTextAlignment">
    @if (ChildContent != null)
    {
        @ChildContent(context)
    }
</GridColumn>

@code {
    [Parameter] public string? HeaderText { get; set; }
    [Parameter] public string? PropertyName { get; set; }
    [Parameter] public bool Sortable { get; set; } = true;
    [Parameter] public bool Filterable { get; set; } = false;
    [Parameter] public int FilterTextboxWidth { get; set; } = 100;
    [Parameter] public Expression<Func<TItem, IComparable>>? SortKeySelector { get; set; }
    [Parameter] public Alignment TextAlignment { get; set; } = Alignment.Start;
    [Parameter] public Alignment HeaderTextAlignment { get; set; } = Alignment.Start;
    [Parameter] public RenderFragment<TItem>? ChildContent { get; set; }
    
    [CascadingParameter] public TItem? context { get; set; }
}
