
@inherits LayoutComponentBase
@attribute [Authorize]
@inject NavigationManager NavigationManager
@inject ThemeManager ThemeManager

<MudThemeProvider @ref="themeProvider" @bind-IsDarkMode="isDarkMode" Theme="ThemeManager.CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => _drawerOpen = !_drawerOpen)" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="ToggleTheme" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MainSidebar />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool isDarkMode;
    private MudThemeProvider themeProvider;

    protected override async Task OnInitializedAsync()
    {
        await ThemeManager.LoadThemeAsync();
        isDarkMode = ThemeManager.CurrentTheme.Palette.IsDark;
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        await ThemeManager.SetThemeAsync(isDarkMode ? "dark" : "light");
    }
}

